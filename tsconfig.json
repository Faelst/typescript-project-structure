{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES6"],
    "module": "commonjs",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      // "@controllers/*": ["./src/controllers/*"],
      // "@lib/*": ["./src/lib/*"],
      // "@modules/*": ["./src/modules/*"],
      // "@config/*": ["./src/config/*"],
      // "@interfaces/*": ["./src/interfaces/*"],
      // "@jobs/*": ["./src/jobs/*"]
    }
  },
  "include": ["src/**/*"]
}
